div(ng-class="elementStyle")
  div(ng-transclude)
  .nexslider(ng-style="sliderStyle",
            ng-swipe-left="goPrev()",
            ng-swipe-right="goNext()"
            )
    //- .debug {{slideSource | json}}
    .prev(ng-show="confSlider.enablearrows && loadedData",
          ng-click="goPrev()")
    .next(ng-show="confSlider.enablearrows && loadedData",
          ng-click="goNext()")
    .slide(ng-class="{'active': $index === currentIndex, 'next': $index === nextIndex, 'prev': $index === prevIndex}",
          ng-repeat="slide in slideSource",
          ng-show="showFunction($index)")
      div(imago-image,
          dimensions="dimensions",
          source="slide",
          sizemode="{{ $parent.confSlider.sizemode }}"
          )

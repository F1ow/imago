.imagoslider(
    class="{{slider.conf.animation}} {{slider.action}}"
    ng-swipe-left="goPrev()"
    ng-swipe-right="goNext()"
    )
  .prev(ng-show="slider.conf.enablearrows"
        ng-click="goPrev($event)"
        stop-propagation)
  .next(ng-show="slider.conf.enablearrows"
        ng-click="goNext($event)"
        stop-propagation)

  div.slides(ng-transclude)

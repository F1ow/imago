.imago-field.number
  div(ng-transclude)
  input(type='text' ng-model='ngModel' ng-blur="update(ngModel)" ng-disabled="disabled")
  button.decrement(
    type='button'
    ng-disabled='isOverMin()'
    ng-click='decrement()'
    )
  button.increment(
    type='button'
    ng-disabled='isOverMax()'
    ng-click='increment()'
    )
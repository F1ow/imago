.cart
  .icon(ng-click="cart.utils.show = !cart.utils.show")
    .counter(ng-bind="cart.utils.cart.items.length")

  .box(ng-show="cart.utils.show")
    div(ng-transclude)

    .itemnumber(
      ng-show="cart.utils.cart.items.length"
      ) {{cart.utils.cart.items.length}} items
    .noitems(
      ng-show="cart.utils.cart.items.length === 0"
      ) no items in cart

    button.checkout(
      ng-show="cart.utils.cart.items.length"
      type="submit"
      ng-click="cart.utils.checkout()"
      ) checkout